<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Boundary.Lapor_frag"
    android:background="@color/bg"
    android:layout_marginBottom="60dp"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        app:titleTextColor="@color/text"
        android:id="@+id/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text4">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_namamhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text2"
            android:textColorHint="@color/text3"
            android:hint="Nama"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/text3"
            android:textColor="@color/text2"
            android:hint="Kelas"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/text4"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_namabrg"
            android:layout_width="match_parent"
            android:textColorHint="@color/text3"
            android:layout_height="wrap_content"
            android:textColor="@color/text2"
            android:hint="Nama Barang"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_nounit"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:textColorHint="@color/text3"
            android:layout_height="wrap_content"
            android:textColor="@color/text2"
            android:hint="Nomor Unit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text4">>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_lokasi"
            android:textColorHint="@color/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text2"
            android:hint="Lokasi (Lab)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_jumlah"
            android:textColorHint="@color/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text2"
            android:hint="Jumlah"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_uraiankerusakan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Uraian Kerusakan"
            android:textColorHint="@color/text3"
            android:gravity="left"
            android:textColor="@color/text2"
            android:inputType="text|textMultiLine"
            android:background="#ECF0F1"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_kirim"
        android:text="Kirim"/>
    </LinearLayout>
</LinearLayout>